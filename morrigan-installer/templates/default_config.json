{
    "api": {
        "endpoint": "https://api.morrigan.ai",
        "timeout": 30,
        "retry_attempts": 3
    },
    "monitoring": {
        "enabled": true,
        "clipboard_monitoring": true,
        "window_monitoring": true,
        "filesystem_monitoring": false,
        "llm_detection": true
    },
    "logging": {
        "level": "INFO",
        "file_path": "logs/morrigan.log",
        "max_size_mb": 10,
        "backup_count": 5
    },
    "service": {
        "auto_start": false,
        "minimize_to_tray": true,
        "check_for_updates": true
    },
    "security": {
        "encrypt_logs": false,
        "anonymous_mode": false
    }
}
