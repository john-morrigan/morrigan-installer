# Morrigan Configuration Template
# Copy this file to .env and configure your settings

# API Configuration
MORRIGAN_API_ENDPOINT=https://api.morrigan.ai
MORRIGAN_API_KEY=your_api_key_here
MORRIGAN_API_TIMEOUT=30

# Monitoring Settings
ENABLE_CLIPBOARD_MONITORING=true
ENABLE_WINDOW_MONITORING=true
ENABLE_FILESYSTEM_MONITORING=false
ENABLE_LLM_DETECTION=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/morrigan.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Service Settings
AUTO_START=false
MINIMIZE_TO_TRAY=true
CHECK_FOR_UPDATES=true

# Security Settings
ENCRYPT_LOGS=false
ANONYMOUS_MODE=false

# Advanced Settings
DEBUG_MODE=false
PERFORMANCE_MONITORING=true
